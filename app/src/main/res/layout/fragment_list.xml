<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/buttonDeleteLocations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete all Locations"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/buttonAddLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputLongitude"
            android:layout_centerHorizontal="true"
            android:text="Add Location"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/inputLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/inputLongitude"
            android:layout_alignStart="@+id/inputLongitude"
            android:layout_below="@+id/buttonCreateTable"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Location Name" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice" />
    </LinearLayout>

</LinearLayout>